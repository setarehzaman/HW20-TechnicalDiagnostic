@page
@model App.EndPoints.RazorPages.Pages.LoginModel
@{
    ViewData["Title"] = "ورود";
}

<h2 class="text-center">ورود به سیستم</h2>

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")">
        @Model.ResultMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="LoginRequest.Username">نام کاربری</label>
        <input asp-for="LoginRequest.Username" class="form-control" />
        <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginRequest.Password">رمز عبور</label>
        <input asp-for="LoginRequest.Password" type="password" class="form-control" />
        <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">ورود</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
